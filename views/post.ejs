<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-24">
    <div class="col-6">
      <h2 class="text-5xl font-bold pb-2"><%= post.hostelName %></h2>
      <h3 class="text-3xl pb-2 pl-5"><%= post.city %></h3>
      <img class="shadow-2xl img-fluid" src="<%= post.image%>" />

      
      <div class="row justify-content-between">
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="left col-3"
        >
          <button class="btn btn-primary btn-outline fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <h3 class="text-2xl text-decoration-line: underline">Thoughts:</h3>
      <p><%= post.review %></p>
      <span>Quick Review</span>
      <% if(post.quickReview == "Yah"){ %>
        <span class="fa fa-thumbs-up"></span>
      <% } else { %>
        <span class="fa fa-thumbs-down"></span>
        <% } %>
    </div>

    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <%= comments[i].comment %>
        </li>
      <% } %>
    </ul>
    <form class="pb-10" action="/comment/createComment/<%= post.id %>" method="POST">
      <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <input type="text" class="form-control" id="comment" name="comment">
      </div>
      <button type="submit" class="btn btn-primary btn-outline">Submit</button>
    </form>
    
  </div>
</div>

<%- include('partials/footer') -%>
